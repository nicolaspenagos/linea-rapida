<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Linearapida" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <!-- GRADIENT BACKGROUND -->
    <style name="AppGradientBackground">
        <item name="android:background">@drawable/blue_gradient</item>
    </style>
    <!-- BACKGROUND -->
    <style name="AppBackground">
        <item name="android:background">@drawable/app_background</item>
    </style>
    <!-- EDIT TEXT -->
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- BUTTON -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- TEXT  -->
    <style name="AppTextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- TEXT LINK -->
    <style name="AppTextViewLink">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- HEADER -->
    <style name="AppHeader">
        <item name="android:background">@drawable/header_background</item>
        <item name="android:elevation">2dp</item>
    </style>
    <!-- GO BACK -->
    <style name="AppGoBackButton">
        <item name="android:layout_width">24dp</item>
    </style>
    <!-- APP HEADER TITLE -->
    <style name="AppHeaderTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gothamrounded_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--  TITLE -->
    <style name="AppActivityTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gothamrounded_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- CUERPO -->
    <style name="AppCuerpoText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- BOTTOM NAVIGATION BAR -->
    <style name="AppBottomNavigationBar">
        <item name="android:background">@drawable/bottom_navigation_background</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>